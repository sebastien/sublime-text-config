{
    "scopeName": "source.paml",
    "uuid": "ef88ac95-c5e4-45b2-95d9-2d2ee98dfbe4",
    "name": "Pamela HTML/XML",
    "comment": "Paml",
    "fileTypes": [
        "paml"
    ],
    "patterns": [
        {
            "match": "^\\#.*$",
            "name": "comment"
        },
        {
            "match": "^[ ]+[^\\s]+.*$",
            "name": "invalid"
        },
        {
            "match": "^\\s*<!DOCTYPE[^>]+>\\s*$",
            "name": "meta.type, meta.tag"
        },
        {
            "match": "^\t*<([\\w\\d\\-_]+)(#[\\w\\d\\-_]+)?((\\.[\\w\\d\\-_]+)*)",
            "captures":{
                "1":{"name" : "name.tag"},
                "2":{"name" : "name.type"},
                "3":{"name" : "name.class"}
            }
        }
    ]
}